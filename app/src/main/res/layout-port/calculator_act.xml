<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgshu"
    android:stretchColumns="*">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="170dp"

        android:gravity="bottom|right"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="70dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/bt_clean"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/orangerectangle_change"
            android:text="AC"
            android:textAllCaps="false"
            android:textSize="35dp" />


        <Button
            android:id="@+id/bt_del"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp"
            android:layout_span="2"
            android:background="@drawable/orange_change"
            android:text="Del"
            android:textAllCaps="false"
            android:textSize="35dp" />

        <Button
            android:id="@+id/bt_divide"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/orange_change"
            android:text="รท"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/bt_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/black_change"
            android:text="7"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/bt_8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/black_change"
            android:text="8"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/bt_9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/black_change"
            android:text="9"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/bt_multiply"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/orange_change"
            android:text="ร"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/bt_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/black_change"
            android:text="4"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/black_change"
            android:text="5"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/bt_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/black_change"
            android:text="6"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/bt_minus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/orange_change"
            android:text="-"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/bt_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/black_change"
            android:text="1"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/black_change"
            android:text="2"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/black_change"
            android:text="3"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/bt_add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/orange_change"
            android:text="+"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/bt_0"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/blackrectangle_change"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:textColor="#FFFFFFFF"
            android:textSize="35dp" />

        <Button
            android:id="@+id/bt_point"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/black_change"
            android:textSize="35dp"
            android:text="."
            android:textColor="#FFFFFFFF"/>

        <Button
            android:id="@+id/bt_equal"
            android:text="="
            android:textColor="#FFFFFFFF"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/orange_change"
            android:textSize="35dp" />
        <Button
            android:id="@+id/bt_left"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/bt_right"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/bt_ci"
            android:layout_height="0dp"
            android:layout_width="0dp"/>
        <Button
            android:id="@+id/bt_cos"
            android:layout_height="0dp"
            android:layout_width="0dp"/>
        <Button
            android:id="@+id/bt_sin"
            android:layout_height="0dp"
            android:layout_width="0dp"/>
        <Button
            android:id="@+id/bt_tan"
            android:layout_height="0dp"
            android:layout_width="0dp"/>
        <Button
            android:id="@+id/bt_gen"
            android:layout_height="0dp"
            android:layout_width="0dp"/>
        <Button
            android:id="@+id/bt_lg"
            android:layout_height="0dp"
            android:layout_width="0dp"/>
    </TableRow>

</LinearLayout>